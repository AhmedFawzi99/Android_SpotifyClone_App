<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/searchPage"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:background="@drawable/angled_gradient_black"
    >

    <TextView
        android:id="@+id/tvSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:text="Search"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/tvSearch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <Button
                android:id="@+id/bSearch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Artists, songs, or albums"
                android:textColor="#000000"
                android:background="#ffffffff" />
            <GridLayout
                android:columnCount="2"
                android:rowCount="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_rowWeight="1"
                    app:cardElevation="60dp"
                    android:backgroundTint="@android:color/transparent"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="10dp">


                        <ImageView

                            android:layout_width="130dp"
                            android:layout_height="88dp"
                            android:src="@drawable/new_releases"/>




                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    app:cardElevation="60dp"
                    android:layout_gravity="right"
                    android:backgroundTint="@android:color/transparent"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="10dp">



                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="88dp"
                            android:src="@drawable/charts"/>




                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    app:cardElevation="60dp"
                    app:cardCornerRadius="15dp"
                    android:layout_gravity="left"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_margin="10dp">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="88dp"
                            android:src="@drawable/concerts"/>



                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    app:cardElevation="60dp"
                    app:cardCornerRadius="15dp"
                    android:layout_gravity="right"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_margin="10dp">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="88dp"
                            android:src="@drawable/for_you"/>




                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    app:cardElevation="60dp"
                    android:backgroundTint="@android:color/transparent"
                    app:cardCornerRadius="20dp"
                    android:layout_gravity="left"
                    android:layout_margin="10dp">


                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="88dp"
                            android:src="@drawable/home"/>



                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    app:cardElevation="60dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_gravity="right"
                    android:layout_margin="10dp">



                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="88dp"
                            android:src="@drawable/arabic"/>



                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_rowWeight="1"
                    app:cardElevation="60dp"
                    android:backgroundTint="@android:color/transparent"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="10dp">


                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="88dp"
                            android:src="@drawable/hip_hop"/>




                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    app:cardElevation="60dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_gravity="right"
                    android:layout_margin="10dp">


                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="88dp"
                            android:src="@drawable/pop"/>




                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_rowWeight="1"
                    app:cardElevation="60dp"
                    android:backgroundTint="@android:color/transparent"
                    app:cardCornerRadius="20dp"
                    android:layout_gravity="left"
                    android:layout_margin="10dp">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="88dp"
                            android:src="@drawable/electronic"/>




                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_rowWeight="1"
                    app:cardElevation="60dp"
                    android:backgroundTint="@android:color/transparent"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="10dp">


                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="88dp"
                            android:src="@drawable/mood"/>




                </androidx.cardview.widget.CardView>
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>