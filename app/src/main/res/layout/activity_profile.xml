<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    >

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:id="@+id/artistmanagment"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:tint="@android:color/white"
                        android:id="@+id/help_btn"
                        android:layout_gravity="right"
                        android:src="@drawable/baseline_help_outline_24">
                    </ImageButton>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/user_profile_image"
                    android:layout_marginTop="30dp"
                    android:layout_width="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="150dp"
                    android:src="@drawable/dec110"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/pname"
                    android:layout_gravity="center_horizontal"
                    android:text="Amr Diab"
                    android:textSize="20dp"
                    android:textColor="@android:color/white">

                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="30dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/pPlaylists"
                            android:layout_gravity="center_horizontal"
                            android:text="0"
                            android:textSize="15dp"
                            android:textColor="@android:color/white">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Playlists"
                            android:textSize="15dp"
                            android:textColor="@android:color/white">

                        </TextView></LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/pFollower"
                            android:layout_gravity="center_horizontal"
                            android:text="0"
                            android:textSize="15dp"
                            android:textColor="@android:color/white">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center_horizontal"
                            android:text="Followers"
                            android:textSize="15dp"
                            android:textColor="@android:color/white">

                        </TextView></LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="30dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/pFollowing"
                            android:text="0"
                            android:textSize="15dp"
                            android:textColor="@android:color/white">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center_horizontal"
                            android:text="Following"
                            android:textSize="15dp"
                            android:textColor="@android:color/white">

                        </TextView></LinearLayout>
            </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recent Activity"
                    android:layout_marginTop="10dp"
                    android:textSize="25dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/recent_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="No Recent Activity Yet"
                    android:textColor="#FF0000"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/recent_activity1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/recent_activity2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    />
                <Button
                    android:id="@+id/logout_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:text="Log Out"
                    android:textColor="@color/white"
                    android:gravity="left|bottom"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"/>

                </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>