<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ArtistFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/text_view_result2"
        android:layout_width="69dp"
        android:layout_height="70dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="640dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:backgroundTint="#000000"


        android:tint="#FFFFFF"
        app:backgroundTint="#7A7A7A"
        app:rippleColor="#7A7A7A"

        app:srcCompat="@drawable/ic_add_box_black_24dp" />

    <TextView
        android:id="@+id/text_view_resulttext"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="30dp"
        android:text="Choose Artists"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:clickable="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="493dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_viewartist"
            android:layout_width="match_parent"
            android:layout_height="605dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>
</RelativeLayout>