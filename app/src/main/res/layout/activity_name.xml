<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:background="@color/black"
    >


    <TextView
        android:layout_width="wrap_content"
        android:text="What's your name?"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />



    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:textColor="@color/white"
        android:height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="This appears on your Spotify profile."
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/bCreate"
        android:text="CREATE"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/disabled_button"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:enabled="false"/>


    <TextView
        android:layout_width="wrap_content"
        android:text="By creating an account, you agree to Spotify's Terms of Service."
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="To learn more about how Spotify collects, uses, shares and protects your personal data please read Spotify's Privacy Policy."
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />





</LinearLayout>