<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/timerpage"
    android:background="@drawable/gradient2"
    tools:context=".TimerClass">


    <LinearLayout
        android:id="@+id/layout_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="Stop audio in "
                android:textColor="#FFFFFF"
                android:textSize="22dp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/five1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/five2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-medium"
                android:layout_weight="1"
                android:gravity="fill_vertical"
                android:text="5 minutes "
                android:textColor="#FFFFFF"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:id="@+id/ten1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:id="@+id/ten2"
                android:gravity="fill_vertical"
                android:fontFamily="sans-serif-medium"
                android:text="10 minutes "
                android:textColor="#FFFFFF"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:id="@+id/fiften1"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:id="@+id/fiften2"
                    android:gravity="fill_vertical"
                    android:fontFamily="sans-serif-medium"
                    android:text="15 minutes "
                    android:textColor="#FFFFFF"
                    android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:id="@+id/thirty1"
            android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:id="@+id/thirty2"
                    android:gravity="fill_vertical"
                    android:fontFamily="sans-serif-medium"
                    android:text="30 minutes "
                    android:textColor="#FFFFFF"
                    android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forty1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/forty2"
                    android:layout_weight="1"
                    android:gravity="fill_vertical"
                    android:fontFamily="sans-serif-medium"
                    android:text="45 miuntes "
                    android:textColor="#FFFFFF"
                    android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:id="@+id/hour1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:id="@+id/hour2"
                android:gravity="fill_vertical"
                android:fontFamily="sans-serif-medium"
                android:text="1 hour "
                android:textColor="#FFFFFF"
                android:textSize="22dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:id="@+id/turnoff1"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/turnoff2"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="fill_vertical"
                    android:text="Turn off timer "
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#FFFFFF"
                    android:textSize="22dp" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>