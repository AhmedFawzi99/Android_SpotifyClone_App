<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_share"
    android:background="@drawable/gradient2"
    tools:context=".ShareFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/sharefragment_layout_small"
        android:layout_marginBottom="20dp"

        >
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23dp"
            android:orientation="vertical"
            android:layout_gravity="center"

            >
            <ImageView
                android:id="@+id/music_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/dec110" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/name_songs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="SONG NAME "
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">


                <TextView
                    android:id="@+id/name_artists"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="Artist Name "
                    android:textColor="#9EA2A2"

                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp"
            android:id="@+id/whatsapp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/whatsapp1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/whastappicon"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="fill_vertical"
                android:id="@+id/whatsapp2"
                android:text="WhatsApp "
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp"
            android:orientation="horizontal"
            android:id="@+id/instagram">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginLeft="10dp"
                android:id="@+id/instagram1"
                android:src="@drawable/instagram_logo_2016_"
                android:scaleType="fitXY"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="fill_vertical"
                android:id="@+id/instagram2"
                android:text="Instagram"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp"
            android:orientation="horizontal"
            android:id="@+id/facebookshare">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/face"
                android:id="@+id/facebookshare1"
                android:scaleType="fitXY"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="fill_vertical"
                android:id="@+id/facebookshare2"
                android:text="Facebook "
                android:layout_marginLeft="20dp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:textSize="20dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp"
            android:orientation="horizontal"
            android:id="@+id/Messengerr">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/messenger"
                android:scaleType="fitXY"
                android:id="@+id/Messenger1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="fill_vertical"
                android:id="@+id/Messenger2"
                android:layout_marginLeft="20dp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:text="Messenger "
                android:textSize="20dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Twitterr"
            android:layout_marginBottom="19dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/twitterr2"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/twitter"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/twitterr3"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="fill_vertical"
                android:text="Twitter "
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Sms"
            android:layout_marginBottom="19dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/Sms1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/sms"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/Sms2"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="fill_vertical"
                android:text="SMS "
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp"
            android:orientation="horizontal"
            android:id="@+id/CopyLink">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginLeft="10dp"
                android:id="@+id/CopyLink1"
                android:src="@drawable/copylink"
                android:scaleType="fitXY"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="fill_vertical"
                android:text="Copy Link"
                android:layout_marginLeft="20dp"
                android:textColor="#FFFFFF"
                android:id="@+id/CopyLink2"
                android:fontFamily="sans-serif-medium"
                android:textSize="20dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:id="@+id/more">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/baseline_more_horiz_24"
                android:scaleType="fitXY"
                android:id="@+id/more1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="fill_vertical"
                android:text="More"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/more2"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>