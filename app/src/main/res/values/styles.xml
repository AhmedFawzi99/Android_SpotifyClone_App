<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/cardview_dark_background</item>
    </style>
    <style name="exampleToast">
        <item name="stColorBackground">@android:color/white</item>
        <item name="stTextColor">@android:color/black</item>
        <item name="strokeWidth">3dp</item>
        <item name="stLength">SHORT</item> LONG or SHORT
        <item name="stRadius">5dp</item>
        <item name="stTextSize">15dp</item>
    </style>
    <style name="MyDatePicker" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="FullscreenDialogTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:statusBarColor">#280680</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
    </style>
</resources>
